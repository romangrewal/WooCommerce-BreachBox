server {
    listen 80;
    listen [::]:80;

    server_name api.pentestacademy.tech;

    location /.well-known/acme-challenge/ {
        root /var/www/certbot;
    }

    location / {
        return 301 https://$host$request_uri;
    }
}

server {
    listen 443 ssl;
    server_name api.pentestacademy.tech;

    ssl_certificate /etc/letsencrypt/live/api.pentestacademy.tech/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/api.pentestacademy.tech/privkey.pem;

    location / {
        proxy_pass http://api:8080;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme; # Important for backend applications to know the original protocol
        proxy_http_version 1.1;
        proxy_cache_bypass $http_upgrade;
    }

}
